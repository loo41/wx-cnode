.user-box {
    height: 100%;
}
.header {
    height: 300rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.5)
}
.header-img {
    height: 100rpx;
    width: 100rpx;
    border-radius: 50%;
    overflow: hidden;
}
.img-full {
    height: 100rpx;
    width: 100rpx;
}
.header-author {
    box-sizing: border-box;
    font-size: 30rpx;
    letter-spacing: 2rpx;
    padding: 10rpx;
}
.recent-topics {
    margin-top: 10rpx;
}
.recent {
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    font-size: 40rpx;
}
.user-recent {
    min-height: 150rpx;
    box-sizing: border-box;
    padding: 2%;
    display: flex;
}
.user-recent_img {
    width: 18%;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1%;
}
.user-recent_con {
    width: 82%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}
.user-recent_cons {
    width: 100%;
    height: 80%;
    box-sizing: border-box;
    padding-right: 3%;
    padding-left: 3%;
    font-size: 30rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.user-recent_oth {
    width: 100%;
    height: 20%;
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    padding-right: 3%;
    padding-left: 3%;
    font-size: 18rpx;
}