page {
    height: 100%;
}
.container {
    height: 100%;
    width: 100%;
    padding: 0rpx;
}
.inputName {
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0rpx;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
}
.outInput {
    display: none;
}
.dialog {
    height: 30%;
    width: 70%;
    background: white;
}
.dialog-top {
    height: 60%;
    display: flex;
    box-sizing: border-box;
    padding: 2%;
    justify-content: center;
    align-items: center;
}
.dialog-top input {
    border: 1px solid gray;
}
.dialog-but {
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    padding-right: 3%;
    padding-left: 3%;
}
.user-box {
    height: 100%;
}
.header {
    height: 300rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-bottom: 1px solid gray;
}
.header-img {
    height: 100rpx;
    width: 100rpx;
    border-radius: 50%;
    overflow: hidden;
}
.img-full {
    height: 100rpx;
    width: 100rpx;
}
.header-author {
    box-sizing: border-box;
    font-size: 30rpx;
    letter-spacing: 2rpx;
    padding: 10rpx;
}
.out {
    height: 50rpx;
    width: 150rpx;
    border-radius: 10%;
    text-align: center;
    line-height: 50rpx;
