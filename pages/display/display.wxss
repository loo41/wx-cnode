.header {
    height: 400rpx;
    background: #444444;
    padding-bottom: 10rpx;
    display: flex;
    flex-direction: column;
    color: white;
}
.header-top {
    height: 300rpx;
    display: flex;
    flex-wrap: wrap;
    font-size: 40rpx;
    align-items: center;
    padding: 3%;
    box-sizing: border-box;
}
.header-but {
    height: 100rpx;
    font-size: 22rpx;
    line-height: 100rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding-left: 3%;
    padding-right: 3%;
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
}
.con {
    box-sizing: border-box;
    padding-left: 1%;
    padding-right: 1%;
    padding-top: 3%;  
}
.replies {
    box-sizing: border-box;
    padding-top: 3%;
}
.replies view {
    box-sizing: border-box;
    padding: 1%;
}
.rp-con {
    display: flex;
    min-height: 150rpx;
}
.rp-con_auther {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 20%;
    box-sizing: border-box;
    align-items: center;
    padding: 2%;
}
.rp-con_auther-img {
    box-sizing: border-box;
    height: 100rpx;
    width: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.img-full {
    width: 100%;
    height: 100%;
}
.rp-con_auther-au {
    font-size: 20rpx;
    text-align: center;
}
.re-con_con {
    display: flex;
    width: 80%;
    flex-direction: column;
}
.re-con_con-con {
    font-size: 25rpx;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}
.re-con_con-timer {
    height: 30rpx;
    line-height: 30rpx;
    text-align: end;
    box-sizing: border-box;
    padding-right: 3%;
    font-size: 22rpx;
}
.displayGithub {
    box-sizing: border-box;
    margin-top: 50rpx;
    height: 200rpx;
    font-size: 35rpx;
    border-top: 1px solid gray;
    display: flex;
    justify-content: center;
    align-items: center;
}